<div class="container">
  <div class="row">
    <div class="show_page_display">
      <div class="col-md-10 col-md-offset-1 ">
        <div class="col-md-3 col-sm-4">
          <div class="text-center">
          <% if @user.avatar? %>
            <%= image_tag @user.avatar, class: "img-responsive img-rounded" %>
          <% else %>
            <img src="http://via.placeholder.com/350x350" class="img-responsive img-rounded">
          <% end %>
          </div>
        </div>
        <div class="col-md-9 col-sm-8 ">
          <% if @user.name? %>
            <h2><%= @user.name %></h2>
          <% else %>
            <h2><%= @user.email.split('@').first %></h2>
          <% end %>
          <p><strong><%= @user.email %></strong></p>
          <% if @user.intro? %>
            <div><%= @user.intro %></div>
          <% else %>
            <div><h3>Please introduce yourself!!</h3></div>
          <% end %>
          <% if @user.email == current_user.email %>
            <%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
    <hr size="8px" align="center" width="100%">

    <% @users.each do |user| %>
      <div class="show_page_display">
        <div class="col-md-10 col-md-offset-1">
          <div class="col-md-3 col-sm-4">
            <div class="text-center">
              <% if user.avatar? %>
                <%= image_tag user.avatar, class: "img-responsive img-rounded" %>
              <% else %>
                <img src="http://via.placeholder.com/350x350" class="img-responsive img-rounded">
              <% end %>
            </div>
          </div>
          <div class="col-md-9 col-sm-8 ">
            <% if user.name? %>
              <h2><%= user.name %></h2>
            <% else %>
              <h2><%= user.email.split('@').first %></h2>
            <% end %>
            <p><strong><%= user.email %></strong></p>
            <% if @user.intro? %>
              <div><%= user.intro %></div>
            <% else %>
              <div><h3>Please introduce yourself!!</h3></div>
            <% end %>
          </div>
        </div>
      </div>
     <hr size="8px" align="center" width="100%" >  
    <% end %>

  </div>
</div>
