<div class="container">
  <div class="row">
    <div class="col-md-10">
      <div class="col-md-3 col-sm-4">
        <div class="text-center">
          <%= image_tag @user.avatar, class: "img-responsive center-block" if @user.avatar?  %>
        </div>
      </div>

      <div class="col-md-9 col-sm-8">
        <% if @user.name? %>
          <h2><%= @user.name %></h2>
        <% else %>
          <h2><%= @user.email.split('@').first %></h2>
        <% end %>
        <p><strong><%= @user.email %></strong></p>
        <% if @user.intro? %>
          <div><%= @user.intro %></div>
        <% else %>
          <div><h2>Please introduce yourself!!</h2></div>
        <% end %>
        <% if @user.email == current_user.email %>
          <%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
