<div class="container">
  <div class="row">

    <div class="edit_user col-md-6 col-md-offset-3">
      <h2>Edit Profile</h2>


      <%= form_for @user do |f| %>
        <div class="form-group">
          <strong><%= f.label :name, "Name" %></strong>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :intro, "Introduce" %>
          <%= f.text_area :intro, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :avatar, "Your Photo" %>
          <%= image_tag @user.avatar, width: "50%" if @user.avatar? %>
          <%= f.file_field :avatar %>
        </div>

        <div class="form-group">
          <%= f.submit "Update", class: "btn btn-primary" %>
        </div>
        <div class="form-group">
          <%= link_to "Cancel", user_path(@user), class: "btn btn-default" %>
        </div>
      <% end %>
    </div>

  </div>

</div>
