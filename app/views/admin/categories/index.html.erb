<div class="container">

  <h1>餐廳分類後台</h1>

  <div>
    <%= link_to "Restaurants", admin_restaurants_path, class: "btn btn-default" %>
    <%= link_to "Categories", admin_categories_path, class: "btn btn-default" %>

  </div>

  <br>

  <div class="row">

   <div class="col-md-12">

    <div class=form-inline>
      <%= form_for [:admin, @category] do |f| %>

        <div class="form-group">
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.submit class: "btn btn-primary" %>
        </div>

        <div class="form-group">
          <% if @category.errors.any? %>
              <% @category.errors.full_messages.each do |msg| %>
                <%= msg %>
              <% end %>
          <% end %>
        </div>

      <% end %>
    </div>

    <br>
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>ID</th>
            <th>Category Name</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
         <% @categories.each do |category| %>
          <tr>
            <th scope="row"><%= category.id %></th>
            <td><%= category.name %></td>
            <td><%= link_to "Edit", admin_categories_path(id:category.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <div class="text-center">
        <%= paginate @categories %>
      </div>

    </div>

  </div>
</div>
