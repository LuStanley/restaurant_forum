<div class="container">

  <h1>餐廳分類後台</h1>

  <div>
    <%= link_to 'Restaurants', admin_restaurants_path, class: "btn btn-default" %>
    <%= link_to 'Categories', admin_categories_path, class: "btn btn-default" %>
  </div>

  <br>

  <div class="row">

   <div class="col-md-12">



      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>ID</th>
            <th>Category Name</th>
          </tr>
        </thead>
        <tbody>
         <% @categories.each do |category| %>
          <tr>
            <th scope="row"><%= category.id %></th>
            <td><%= category.name %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div class="text-center">
        <%= paginate @categories %>
      </div>

    </div>

  </div>
</div>
